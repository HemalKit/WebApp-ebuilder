
@{
    ViewBag.Title = "Index";
}

<h2>Reports</h2>

<body>
   
    <button onclick="levavesAppliedWeekday()" class="btn btn-primary">
        Leaves Applied by Weekday
    </button>

    <button onclick="leaveAppliedMonthly()" class="btn btn-primary">
        Leaves Applied by Month
    </button>

    <button onclick="dutyLeavesWeekday()" class="btn btn-primary">
        Duty Leaves by Weekday
    </button>

    <button onclick="dutyLeavesMonthly()" class="btn btn-primary">
        Duty Leaves by Month
    </button>
    
    <hr/>

    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label>Leaves Applied by Weekday <b>(%)</b></label>
                <canvas id="DonutChart1" width="400" height="400"></canvas>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Leaves Applied by Month <b>(%)</b></label>
                <canvas id="DonutChart2" width="400" height="400"></canvas>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Duty Leaves by Weekday <b>(%)</b></label>
                <canvas id="DonutChart3" width="400" height="400"></canvas>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Duty Leaves by Month <b>(%)</b></label>
                <canvas id="DonutChart4" width="400" height="400"></canvas>
            </div>
        </div>
    </div>
    

    
</body>

@section Scripts{
<script src="~/Scripts/Chart.js"></script>
<script src="~/Scripts/Common.js"></script>
<script>

    function levavesAppliedWeekday() {
        var c = document.getElementById("DonutChart1");
        debugger
        var ctx = c.getContext("2d");
        var tData = $.getValues("/Reports/LeavesAppliedByWeekday");
        var myPieChart = new Chart(ctx, {
            type: 'doughnut',
            data: tData            
        });
    }

    function leaveAppliedMonthly() {
        var c = document.getElementById("DonutChart2");
        debugger
