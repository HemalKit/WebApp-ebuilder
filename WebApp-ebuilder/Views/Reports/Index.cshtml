        var myPieChart = new Chart(ctx, {
            type: 'doughnut',
            data: tData
            
        });
    }

    function dutyLeavesWeekday() {
        var c = document.getElementById("DonutChart3");
        debugger
        var ctx = c.getContext("2d");
        var tData = $.getValues("/Reports/DutyLeavesByWeekday");
        var myPieChart = new Chart(ctx, {
            type: 'doughnut',
            data: tData
        });
    }

    function dutyLeavesMonthly() {
        var c = document.getElementById("DonutChart4");
