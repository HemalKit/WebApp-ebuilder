    </div>
</div>

@section scripts {
    <script src="~/Scripts/Chart.js"></script>
    <script src="~/Scripts/Common.js"></script>
    <script>
        //----Donut Chart---------
        var c = document.getElementById("DonutChartTaken");
        debugger
        var ctx = c.getContext("2d");
        var tData = $.getValues("/Leaves/Leavestaken");
        var myPieChart = new Chart(ctx, {
            type: 'doughnut',
            data: tData,
        });



        var c = document.getElementById("DonutChartLeft");
        debugger
        var ctx = c.getContext("2d");
        var tData = $.getValues("/Leaves/Leavesleft");
