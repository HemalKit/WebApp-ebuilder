@model IEnumerable<WebApp_ebuilder.Models.leavWithStatusAndName>

@{
    ViewBag.Title = "ViewLeaves";
}

<h2>All Leaves</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.leaveCategory)
        </th>
        @if (HttpContext.Current.User.IsInRole("HR Admin") | HttpContext.Current.User.IsInRole("Managerial"))
        {
        <th>
            @Html.DisplayNameFor(model => model.jobCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EID)
        </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reason)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.leaveCategory)
        </td>
         @if (HttpContext.Current.User.IsInRole("HR Admin") | HttpContext.Current.User.IsInRole("Managerial"))
         {
        <td>
            @Html.DisplayFor(modelItem => item.jobCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EID)
        </td>
         }
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
       
        <td>
            @if (DateTime.Compare(item.date, DateTime.Today) > 0)
            {
            @Html.ActionLink("Edit  ", "Edit", new { LID=item.LID })
            
            
            @Html.ActionLink("Delete", "Delete", new { LID=item.LID })
            }
        </td>
    </tr>
}

</table>
