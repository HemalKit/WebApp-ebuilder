<head>
    @Styles.Render("~/Content/vendor/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Content/vendor/font-awesome/css/font-awesome.min.css")
    @Styles.Render("~/Content/css/sb-admin.css")

</head>


@{
    ViewBag.Title = "ForgotPassword";
    Layout = "";
}

<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Reset Password</div>
            <div class="card-body">
                <div class="text-center mt-4 mb-5">
                    <h4>Forgot your password?</h4>
                    <p>Enter your email address to send a verification code to reset your password.</p>
                </div>
                <form>
                    <div class="form-group">
                        <input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="Enter email address">
                    </div>                   
                        <div class="col-md-offset-2 col-md-10">
                            <button onclick="location.href='@Url.Action("ForgotPassword")';" class="btn btn-primary btn-block">
                                Forgot Password
                            </button>
                        </div>
                    
                </form>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

